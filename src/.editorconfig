# http://editorconfig.org

root = true

[*.{fs,fsi,fsproj,cs,csproj}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.hbs]
insert_final_newline = false

[{package}.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
