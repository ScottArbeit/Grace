# Use bd merge for beads JSONL files
.beads/issues.jsonl merge=beads

# Ensure all text files use LF line endings
* text=auto eol=lf

# Explicit rules for common source files
*.fs     text eol=lf
*.fsi    text eol=lf
*.fsproj text eol=lf
*.cs     text eol=lf
*.csproj text eol=lf
*.ps1    text eol=lf
*.psm1   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.sh     text eol=lf

# Binary files should never be modified
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.zip    binary
*.dll    binary
*.exe    binary
